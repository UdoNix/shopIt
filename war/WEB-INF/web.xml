<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://java.sun.com/xml/ns/javaee 
              http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
         version="2.5"
         xmlns="http://java.sun.com/xml/ns/javaee">

  <!-- Servlets -->
  <servlet>
    <servlet-name>shopServlet</servlet-name>
    <servlet-class>de.hdm.server.ShopITAdministrationImpl</servlet-class>
  </servlet>
  
  <servlet-mapping>
    <servlet-name>shopServlet</servlet-name>
    <url-pattern>/shopit/shop</url-pattern>
  </servlet-mapping>
  
   <servlet>
    <servlet-name>reportShopServlet</servlet-name>
    <servlet-class>de.hdm.server.ShopITAdministrationImpl</servlet-class>
  </servlet>
  
  <servlet-mapping>
    <servlet-name>reportShopServlet</servlet-name>
    <url-pattern>/report/shop</url-pattern>
  </servlet-mapping>
  
   <servlet>
    <servlet-name>loginServlet</servlet-name>
    <servlet-class>de.hdm.server.LoginServiceImpl</servlet-class>
  </servlet>
  
  <servlet-mapping>
    <servlet-name>loginServlet</servlet-name>
    <url-pattern>/shopit/login</url-pattern>
  </servlet-mapping>
  
  <servlet>
    <servlet-name>reportServlet</servlet-name>
    <servlet-class>de.hdm.server.report.ReportGeneratorImpl</servlet-class>
  </servlet>
  
  <servlet-mapping>
    <servlet-name>reportServlet</servlet-name>
    <url-pattern>/report/report</url-pattern>
  </servlet-mapping>
  
  
   <welcome-file-list>
    <welcome-file>GWTTest1.html</welcome-file>
  </welcome-file-list>

</web-app>
